#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
# shellcheck source=common.sh
source "${SCRIPT_DIR}/common.sh"

activate_venv

if ! command -v cyclonedx-py >/dev/null 2>&1; then
    abort "cyclonedx-py is not installed. Run scripts/bootstrap to provision dev dependencies."
fi

cyclonedx-py --format json --output sbom/wildcore-sbom.json
